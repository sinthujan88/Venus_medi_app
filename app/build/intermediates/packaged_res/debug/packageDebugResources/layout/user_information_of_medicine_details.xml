<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Information_Of_Labtest_Details"
    android:background="@drawable/themebackground"
    android:id="@+id/medicinedetails">


    <TextView
        android:id="@+id/textviewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:text="Medicine Details"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:drawableStart="@drawable/hopitallogo1"
        android:drawableEnd="@drawable/hopitallogo2"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/textviewmedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textviewtitle"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"/>


    <ListView
        android:id="@+id/listviewmedicines"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:scrollbarSize="10dp"/>

    <Button
        android:id="@+id/btnaddtocart"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="32dp"
        android:backgroundTint="#082B6A"
        android:text="Add to cart"
        android:textSize="18.5dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnback"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginTop="710dp"
        android:layout_marginLeft="32dp"
        android:backgroundTint="#082B6A"
        android:text="Back"
        android:textSize="18.5dp"
        android:textStyle="bold"/>

</RelativeLayout>