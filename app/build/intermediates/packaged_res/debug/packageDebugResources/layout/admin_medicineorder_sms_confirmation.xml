<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15sp"
    android:background="@drawable/themebackground"
    tools:context=".Admin_Medicineorder_Sms_Confirmation"
    android:id="@+id/adminmedicinesmsconfirmation">



    <ToggleButton
        android:id="@+id/backtoadminmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Home"
        android:textOn="Home"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="227dp"
        android:layout_marginRight="161dp"
        android:paddingTop="52sp"
        android:paddingLeft="-14.3dp"
        android:background="@drawable/admin_home_button"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Medicine Order Confirmation"
        android:layout_marginTop="-192dp"
        android:textStyle="bold"
        android:textSize="20dp"/>


    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:id="@+id/edittextphone"
        android:padding="15dp"
        android:inputType="phone"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@drawable/input_field_shape"
        android:layout_marginTop="50dp"/>


    <EditText
        android:layout_width="350dp"
        android:layout_height="330dp"
        android:id="@+id/editconfirmationmessage"
        android:hint="Enter Confirmation Message"
        android:padding="15sp"
        android:inputType="textMultiLine"
        android:lines="25"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/input_field_rectangle"
        android:layout_marginTop="15dp"/>


    <Button
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:id="@+id/btnsent"
        android:text="Send SMS"
        android:layout_marginTop="30dp"
        android:backgroundTint="#082C6D"/>

</LinearLayout>