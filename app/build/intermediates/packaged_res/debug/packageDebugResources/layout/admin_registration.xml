<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminregister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/themebackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WelcomeScreen">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/adminToggleButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Home"
            android:textOn="Home"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="top|start"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:paddingTop="52sp"
            android:paddingLeft="-12.8dp"
            android:background="@drawable/admin_home_button"/>

    </FrameLayout>


    <ImageView
        android:layout_width="490dp"
        android:layout_height="200dp"
        android:layout_marginTop="-10dp"
        android:paddingRight="18dp"
        android:src="@drawable/newadminregistrationlogo"/>

    <!-- Admin Registration Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.03"
        android:text="Admin Registration"
        android:textColor="#072459"
        android:textSize="22dp"
        android:textStyle="bold" />

    <!-- Username EditText -->
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/input_field_shape"
        android:drawableLeft="@drawable/input_field_person"
        android:drawablePadding="7dp"
        android:paddingLeft="20dp"
        android:singleLine="false"
        android:hint="Username"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="#072459"
        android:textStyle="bold"
        android:id="@+id/edUsername"/>

    <!-- Phone number EditText -->
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/input_field_shape"
        android:drawableLeft="@drawable/input_field_phone"
        android:drawablePadding="7dp"
        android:paddingLeft="20dp"
        android:singleLine="false"
        android:hint="Phone number"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="#072459"
        android:textStyle="bold"
        android:id="@+id/edPhonenumber"/>

    <!-- Email EditText -->
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/input_field_shape"
        android:drawableLeft="@drawable/input_field_email"
        android:drawablePadding="7dp"
        android:paddingLeft="20dp"
        android:singleLine="false"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="#072459"
        android:textStyle="bold"
        android:id="@+id/edEmail"/>

    <!-- Password EditText -->
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/input_field_shape"
        android:drawableLeft="@drawable/input_field_password"
        android:drawablePadding="7dp"
        android:paddingLeft="20dp"
        android:singleLine="false"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="#072459"
        android:textStyle="bold"
        android:id="@+id/edPassword"/>

    <!-- Confirm Password EditText -->
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/input_field_shape"
        android:drawableLeft="@drawable/input_field_password"
        android:drawablePadding="7dp"
        android:paddingLeft="20dp"
        android:singleLine="false"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="#1144A0"
        android:textStyle="bold"
        android:id="@+id/edConfirmpassword"/>

    <!-- Already have an account? TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign in"
        android:textStyle="bold"
        android:textColor="#71747A"
        android:textSize="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:id="@+id/tv3" />

    <!-- Register Button -->
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0B3583"
        android:text="Register"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/btnregister"/>

</LinearLayout>
