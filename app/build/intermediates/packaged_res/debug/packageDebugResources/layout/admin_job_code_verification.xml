<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:id="@+id/jobcode"
    android:background="@drawable/themebackground">


    <ToggleButton
        android:id="@+id/adminhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Home"
        android:textOn="Home"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="top|start"
        android:layout_marginTop="-230dp"
        android:layout_marginLeft="-5dp"
        android:paddingTop="52sp"
        android:paddingLeft="-12.8dp"
        android:background="@drawable/admin_home_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Job Code"
        android:textSize="24sp"
        android:textColor="#072459"
        android:textStyle="bold"
        android:layout_marginTop="140dp" />

    <EditText
        android:id="@+id/etJobCode"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:hint="Enter Your Job Code"
        android:background="@drawable/input_field_shape"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/btnVerifyJobCode"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#072459"
        android:text="Verify"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
